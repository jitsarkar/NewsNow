<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0a274f</item>
        <item name="colorPrimaryDark">#0a274f</item>
        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

  <style name="MainTheme" parent="AppTheme">
      <item name="actionBarStyle">@style/NoTitle</item>
      
  </style>
  <style  name="NoTitle" parent = "@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
       <item name="android:displayOptions">showHome|useLogo</item>
      <item name="displayOptions">useLogo|showHome</item> 
      <item name="logo">@drawable/name</item>
      
  </style>
  
    

</resources>